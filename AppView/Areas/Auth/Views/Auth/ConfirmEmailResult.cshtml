@{
    ViewData["Title"] = "Xác nhận Email";
    Layout = "_MyLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 text-center">
                    @if (ViewBag.Success)
                    {
                        <div class="text-center mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                        </div>
                        <h3 class="text-success mb-3">Xác nhận thành công!</h3>
                        <p class="mb-4">Email <strong class="text-primary">@ViewBag.Email</strong> đã được xác nhận thành công.</p>
                        <div class="d-grid gap-2 col-md-6 mx-auto">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                                <i class="fas fa-home me-2"></i> Về trang chủ
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center mb-4">
                            <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
                        </div>
                        <h3 class="text-danger mb-3">Xác nhận thất bại</h3>
                        <div class="alert alert-danger">
                            <p class="mb-2">Không thể xác nhận email <strong>@ViewBag.Email</strong>.</p>
                            <p class="mb-0">@ViewBag.Message</p>
                        </div>
                        
                        <div class="d-grid gap-2 col-md-8 mx-auto">
                            <button onclick="resendConfirmationEmail('@ViewBag.Email')" 
                                    class="btn btn-warning btn-lg">
                                <i class="fas fa-paper-plane me-2"></i> Gửi lại email xác nhận
                            </button>
                            <a href="mailto:support@aodaiviet.com" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-headset me-2"></i> Liên hệ hỗ trợ
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    @if (ViewBag.Success)
    {
        <text>
        showSuccess('Email @ViewBag.Email đã được xác nhận thành công!', 'Xác nhận thành công');
        </text>
    }
    else
    {
        <text>
        showError('@Html.Raw(ViewBag.Message)', 'Xác nhận thất bại');
        </text>
    }
});
</script>
