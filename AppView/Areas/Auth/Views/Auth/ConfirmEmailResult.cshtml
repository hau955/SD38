@{
    ViewData["Title"] = "Xác nhận Email";
    Layout = "_MyLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 text-center">
                    @if (ViewBag.Success)
                    {
                        <div class="text-center mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-success mb-3">Xác nhận thành công!</h3>
                        <p class="mb-4">Email <strong>@ViewBag.Email</strong> đã được xác nhận thành công.</p>
                        <a href="@Url.Action("Login", "Auth")" class="btn btn-primary px-4">
                            <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập ngay
                        </a>
                    }
                    else
                    {
                        <div class="text-center mb-4">
                            <i class="fas fa-times-circle text-danger" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-danger mb-3">Xác nhận thất bại</h3>
                        <p class="mb-2">Không thể xác nhận email <strong>@ViewBag.Email</strong>.</p>
                        <p class="text-muted mb-4">@ViewBag.Message</p>
                        
                        <button onclick="resendConfirmationEmail('@ViewBag.Email')" 
                                class="btn btn-warning px-4">
                            <i class="fas fa-paper-plane me-2"></i> Gửi lại email xác nhận
                        </button>
                        
                        <div class="mt-4">
                            <p class="text-muted">Nếu vẫn gặp vấn đề, vui lòng liên hệ hỗ trợ:</p>
                            <a href="mailto:support@aodaiviet.com" class="btn btn-outline-secondary">
                                <i class="fas fa-headset me-2"></i> Hỗ trợ khách hàng
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
