@{
    ViewData["Title"] = "Xác nhận Email";
    Layout = "_MyLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 text-center">
                    <div class="my-4">
                        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <h4 class="mt-3">Đang xác nhận email của bạn</h4>
                        <p class="text-muted">Vui lòng chờ trong giây lát...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Hiển thị thông báo loading
        const loading = showLoading('Đang xác nhận email...');

        // Giả lập quá trình xác nhận (trong thực tế sẽ là API call)
        setTimeout(() => {
            loading.close();
            // Trang sẽ tự chuyển hướng sau khi xác nhận xong
        }, 2000);
    });
</script>
