@model AppData.Models.Size

@{
    ViewData["Title"] = "Chỉnh sửa Size";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="IDSize" />

        <div class="form-group mb-3">
            <label asp-for="SoSize" class="form-label">Số Size</label>
            <input asp-for="SoSize" class="form-control" placeholder="Nhập số size..." />
            <span asp-validation-for="SoSize" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="TrangThai" class="form-check-input" />
            <label asp-for="TrangThai" class="form-check-label">Hoạt động</label>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Cập nhật
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
