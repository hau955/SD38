@model WebModels.Models.Size

@{
    ViewData["Title"] = "Thêm Size mới";
    Layout = "_AdminLayout"; // nếu bạn đang dùng layout
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-floating mb-3">
            <input asp-for="SoSize" class="form-control" placeholder="Nhập tên size" />
            <label asp-for="SoSize">Tên Size</label>
            <span asp-validation-for="SoSize" class="text-danger small"></span>
        </div>

        <div class="form-check form-switch mb-4">
            <input asp-for="TrangThai" class="form-check-input" />
            <label asp-for="TrangThai" class="form-check-label">Hoạt động</label>
        </div>

        <button type="submit" class="btn btn-success me-2">
            <i class="fas fa-save"></i> Lưu
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
