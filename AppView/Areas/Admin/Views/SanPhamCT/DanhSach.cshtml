@model List<AppData.Models.SanPhamCT>

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    var idSanPham = ViewBag.IdSanPham;
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">
        <i class="fas fa-info-circle"></i> @ViewData["Title"]
    </h2>

    <p class="text-muted">Mã sản phẩm: <strong>@idSanPham</strong></p>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-exclamation-circle"></i> Không có dữ liệu chi tiết cho sản phẩm này.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light text-center">
                <tr>
                    <th>Màu</th>
                    <th>Size</th>
                    <th>Cổ áo</th>
                    <th>Tà áo</th>
                    <th>Giá bán</th>
                    <th>Số lượng</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.MauSac?.TenMau</td>
                        <td class="text-center">@item.SizeAo?.SoSize</td>
                        <td class="text-center">@item.CoAo?.TenCoAo</td>
                        <td class="text-center">@item.TaAo?.TenTaAo</td>
                        <td class="text-end text-nowrap">@item.GiaBan.ToString("N0") đ</td>
                        <td class="text-end">@item.SoLuongTonKho.ToString("N0") cái</td>
                        <td class="text-center">
                            <span class="badge @(item.TrangThai ? "bg-success" : "bg-secondary")">
                                @(item.TrangThai ? "Còn hàng" : "Hết hàng")
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-action="CapNhat" asp-route-id="@item.IDSanPhamCT" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-3">
        <a asp-action="DanhSach" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
