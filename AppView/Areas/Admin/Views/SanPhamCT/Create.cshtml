@model AppData.Models.SanPhamCT

@{
    ViewData["Title"] = "Thêm Sản phẩm chi tiết";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">
        <i class="fas fa-plus-circle"></i> @ViewData["Title"]
    </h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-6">
            <label for="IDSanPham" class="form-label">Sản phẩm</label>
            <select asp-for="IDSanPham" asp-items="ViewBag.SanPhams" class="form-select"></select>
        </div>

        <div class="col-md-6">
            <label for="IDSize" class="form-label">Size</label>
            <select asp-for="IDSize" asp-items="ViewBag.Sizes" class="form-select"></select>
        </div>

        <div class="col-md-6">
            <label for="IDMauSac" class="form-label">Màu sắc</label>
            <select asp-for="IDMauSac" asp-items="ViewBag.MauSacs" class="form-select"></select>
        </div>

        <div class="col-md-6">
            <label for="IDCoAo" class="form-label">Cổ áo</label>
            <select asp-for="IDCoAo" asp-items="ViewBag.CoAos" class="form-select"></select>
        </div>

        <div class="col-md-6">
            <label for="IDTaAo" class="form-label">Tà áo</label>
            <select asp-for="IDTaAo" asp-items="ViewBag.TaAos" class="form-select"></select>
        </div>

        <div class="col-md-6">
            <label asp-for="GiaBan" class="form-label">Giá bán (VNĐ)</label>
            <input asp-for="GiaBan" class="form-control" placeholder="Nhập giá bán..." />
            <span asp-validation-for="GiaBan" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="SoLuongTonKho" class="form-label">Số lượng tồn kho</label>
            <input asp-for="SoLuongTonKho" class="form-control" placeholder="Nhập số lượng..." />
            <span asp-validation-for="SoLuongTonKho" class="text-danger"></span>
        </div>

        @* Nếu có ImageFile thì mở lại đoạn này
        <div class="col-md-6">
            <label asp-for="ImageFile" class="form-label">Hình ảnh</label>
            <input asp-for="ImageFile" type="file" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div> *@

        <div class="col-md-6 d-flex align-items-center mt-4">
            <input asp-for="TrangThai" class="form-check-input me-2" />
            <label asp-for="TrangThai" class="form-check-label">Hoạt động</label>
        </div>

        <div class="col-12 mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Lưu
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Huỷ
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
