@model AppApi.ViewModels.Profile.ProfileViewModel

@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<h2>Thông tin hồ sơ</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Họ tên:</strong> @Model.HoTen</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
        <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
        <p>
            <strong>Ảnh đại diện:</strong><br />
           <img src="@Model.HinhAnh" width="120" height="120" /> 
        </p>
    </div>
</div>
