@model List<AppData.Models.ChatLieu>

@{
    ViewData["Title"] = "Quản lý Chat Lieu";
}

<!-- Custom Style -->
<style>
    .table-wrapper {
        background: #fffaf0;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        color: #8B0000;
        font-weight: 600;
        border-bottom: 2px solid #d4af37;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .btn-success {
        background-color: #d4af37;
        border: none;
        font-weight: 500;
    }

        .btn-success:hover {
            background-color: #b8941f;
        }

    .btn-danger {
        background-color: #8B0000;
        border: none;
    }

        .btn-danger:hover {
            background-color: #a52a2a;
        }

    .btn-warning {
        background-color: #ff9800;
        border: none;
    }

    .btn-primary {
        background-color: #4682B4;
        border: none;
    }

    .badge.bg-success {
        background-color: #28a745;
    }

    .badge.bg-secondary {
        background-color: #6c757d;
    }

    .alert {
        font-size: 0.95rem;
    }
</style>

<div class="container mt-4">
    <div class="table-wrapper">
        <h2><i class="fas fa-ruler-combined me-2"></i> @ViewData["Title"]</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="ChatLieu" asp-action="Create">
            <i class="fas fa-plus"></i> Thêm mới
        </a>

        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th style="width: 45%;">TenChatLieu</th>
                        <th style="width: 20%;">Trạng thái</th>
                        <th style="width: 35%;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.TenChatLieu</td>
                            <td class="text-center">
                                <span class="badge rounded-pill @(item.TrangThai ? "bg-success" : "bg-secondary")">
                                    @(item.TrangThai ? "Hoạt động" : "Không hoạt động")
                                </span>
                            </td>
                            <td>
                                <div class="d-flex gap-2 justify-content-center">
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.IDChatLieu">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <form asp-area="Admin" asp-controller="ChatLieu" asp-action="ToggleStatus"
                                          asp-route-id="@item.IDChatLieu" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-warning">
                                            <i class="fas fa-sync-alt"></i> Trạng thái
                                        </button>
                                    </form>
                                    <form asp-area="Admin" asp-controller="ChatLieu" asp-action="DeleteCL"
                                          asp-route-id="@item.IDChatLieu" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Bạn có chắc chắn muốn xoá chất liệu này không?');">
                                            <i class="fas fa-trash-alt"></i> Xoá
                                        </button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Không có dữ liệu size nào.
            </div>
        }
    </div>
</div>
