@{
    Layout = null;
    ViewBag.Title = "Bán Hàng Tại Quầy";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to bottom right, #fffbe6, #fdfcfb);
            color: #333;
            padding: 40px;
            font-family: 'Segoe UI', sans-serif;
        }

        h2, h5 {
            color: #b58e00;
            font-weight: 700;
        }

        .form-section {
            background: #ffffffd9;
            border: 1px solid #f0e6c9;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 25px rgba(184, 134, 11, 0.1);
            margin-bottom: 40px;
        }

        .form-label {
            color: #6a5600;
            font-weight: 600;
        }

        .form-control, .form-select {
            border-radius: 12px;
            border: 1px solid #e3c57c;
        }

        .btn-gold {
            background-color: #f3c800;
            color: #000;
            font-weight: 600;
            border: none;
            border-radius: 30px;
            padding: 10px 25px;
            transition: all 0.3s ease;
        }

            .btn-gold:hover {
                background-color: #e0b700;
                color: #000;
            }

        .btn-outline-gold {
            border: 2px solid #f3c800;
            color: #b58e00;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-outline-gold:hover {
                background-color: #f3c800;
                color: #000;
            }

        .table th {
            background-color: #fff3cd;
            color: #7c5c00;
        }

        .table td {
            vertical-align: middle;
        }

        .total-box {
            background: #fffbe6;
            padding: 15px 25px;
            border-radius: 12px;
            text-align: right;
            font-size: 1.2rem;
            font-weight: bold;
            color: #b58e00;
            border: 1px solid #f2e2a0;
        }
    </style>
</head>

<body>
    <div class="container-lg">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2>🛍️ BÁN HÀNG TẠI QUẦY</h2>
            <a href="@Url.Action("HoaDonCho", "BanHang")" class="btn btn-outline-gold">
                📋 Xem Hóa Đơn Chờ
            </a>
        </div>

        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
