@{
    ViewBag.Title = "Bán Hàng Tại Quầy";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to bottom right, #fffbe6, #fdfcfb);
            color: #333;
            padding: 40px;
            font-family: 'Segoe UI', sans-serif;
        }

        h2, h5 {
            color: #b58e00;
            font-weight: 700;
        }

        .form-section {
            background: #ffffffd9;
            border: 1px solid #f0e6c9;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 25px rgba(184, 134, 11, 0.1);
            margin-bottom: 40px;
        }

        .form-label {
            color: #6a5600;
            font-weight: 600;
        }

        .form-control, .form-select {
            border-radius: 12px;
            border: 1px solid #e3c57c;
        }

        .btn-gold {
            background-color: #f3c800;
            color: #000;
            font-weight: 600;
            border: none;
            border-radius: 30px;
            padding: 10px 25px;
            transition: all 0.3s ease;
        }

            .btn-gold:hover {
                background-color: #e0b700;
                color: #000;
            }

        .btn-outline-gold {
            border: 2px solid #f3c800;
            color: #b58e00;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-outline-gold:hover {
                background-color: #f3c800;
                color: #000;
            }

        .table th {
            background-color: #fff3cd;
            color: #7c5c00;
        }

        .table td {
            vertical-align: middle;
        }

        .total-box {
            background: #fffbe6;
            padding: 15px 25px;
            border-radius: 12px;
            text-align: right;
            font-size: 1.2rem;
            font-weight: bold;
            color: #b58e00;
            border: 1px solid #f2e2a0;
        }
    </style>
</head>
<body>
    <div class="container-lg">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2>🛍️ BÁN HÀNG TẠI QUẦY</h2>
            <button class="btn btn-outline-gold">
                📋 Xem Hóa Đơn Chờ
            </button>
        </div>
        @RenderBody()
        <div class="form-section">
            <form method="post" id="form-them-mon">
                <div class="row g-4 align-items-end">
                    <div class="col-md-5">
                        <label class="form-label">Món ăn</label>
                        <select class="form-select" name="MonAnId">
                            <option value="">-- Chọn món --</option>
                            
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Số lượng</label>
                        <input type="number" name="SoLuong" class="form-control" value="1" min="1" />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-gold w-100">
                            ➕ Thêm vào hóa đơn
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="form-section">
            <h5 class="mb-3">📋 Danh Sách Món Gọi</h5>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên món</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* Dữ liệu món đã chọn *@
                        <!-- <tr><td colspan="6" class="text-center text-muted">Chưa có món nào được thêm</td></tr> -->
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <div class="total-box">Tổng tiền: <span id="tongTien">0</span> VNĐ</div>
            </div>
        </div>

        <div class="form-section">
            <h5 class="mb-3">💳 Thanh Toán</h5>
            <form method="post" id="form-thanh-toan">
                <div class="row g-4">
                    <div class="col-md-4">
                        <label class="form-label">Tiền khách đưa</label>
                        <input type="number" name="TienKhachDua" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Tiền thối lại</label>
                        <input type="text" id="TienThoiLai" class="form-control" readonly />
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-gold w-100">
                            ✅ Xác Nhận Thanh Toán
                        </button>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="button" class="btn btn-outline-gold">
                        🗑 Hủy hóa đơn
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
