@using AppView.Areas.Admin.ViewModels
@using AppView.Areas.Admin.ViewModels.ThongKeViewModel
@model RevenueReportViewModel
@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var request = ViewBag.Request as TimeRangeRequestViewModel;
    
    // Tính toán tổng cộng
    var totalRevenue = Model?.RevenueByTime?.Sum(r => r.Revenue) ?? 0;
    var totalProfit = Model?.RevenueByTime?.Sum(r => r.Profit) ?? 0;
    var totalOrders = Model?.RevenueByTime?.Sum(r => r.OrderCount) ?? 0;
    var avgOrderValue = totalOrders > 0 ? totalRevenue / totalOrders : 0;
    var profitMargin = totalRevenue > 0 ? (totalProfit / totalRevenue) * 100 : 0;
    
    // Phân trang
    int pageSize = 20;
    int currentPage = ViewBag.Page != null ? (int)ViewBag.Page : 1;
    var pagedData = Model?.RevenueByTime?.Skip((currentPage - 1) * pageSize).Take(pageSize).ToList() ?? new List<RevenueByTimeViewModel>();
    int totalPages = Model?.RevenueByTime?.Count > 0 ? (int)Math.Ceiling((double)Model.RevenueByTime.Count / pageSize) : 1;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-primary bg-gradient rounded-3 p-4 mb-4">
                <div class="text-white">
                    <h4 class="mb-sm-0 fw-bold">@ViewData["Title"]</h4>
                    <p class="mb-0 opacity-75">Phân tích chi tiết doanh thu và xu hướng kinh doanh</p>
                </div>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0 bg-transparent">
                        <li class="breadcrumb-item"><a href="/Admin" class="text-white-50">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="/Admin/ThongKe" class="text-white-50">Thống kê</a></li>
                        <li class="breadcrumb-item active text-white">Doanh thu</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-filter me-2 text-primary"></i>Bộ Lọc Dữ Liệu
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-medium">Từ ngày <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" name="StartDate" 
                                   value="@(request?.StartDate.ToString("yyyy-MM-dd") ?? DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd"))" 
                                   required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-medium">Đến ngày <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" name="EndDate" 
                                   value="@(request?.EndDate.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))" 
                                   required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-medium">Nhóm theo</label>
                            <select class="form-select" name="GroupType">
                                <option value="Day" selected="@(request?.GroupType == TimeGroupTypeViewModel.Day)">Theo ngày</option>
                                <option value="Week" selected="@(request?.GroupType == TimeGroupTypeViewModel.Week)">Theo tuần</option>
                                <option value="Month" selected="@(request?.GroupType == TimeGroupTypeViewModel.Month)">Theo tháng</option>
                                <option value="Quarter" selected="@(request?.GroupType == TimeGroupTypeViewModel.Quarter)">Theo quý</option>
                                <option value="Year" selected="@(request?.GroupType == TimeGroupTypeViewModel.Year)">Theo năm</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-search me-2"></i>Lọc dữ liệu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Metrics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 metric-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="metric-icon bg-primary">
                                <i class="fas fa-chart-line text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="text-muted fw-medium mb-1">Tổng Doanh Thu</p>
                            <h4 class="mb-0 text-primary fw-bold">
                                @totalRevenue.ToString("N0") VNĐ
                            </h4>
                            <small class="text-muted">
                                Kỳ: @(request?.StartDate.ToString("dd/MM/yyyy") ?? "N/A") - @(request?.EndDate.ToString("dd/MM/yyyy") ?? "N/A")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 metric-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="metric-icon bg-success">
                                <i class="fas fa-coins text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="text-muted fw-medium mb-1">Tổng Lợi Nhuận</p>
                            <h4 class="mb-0 text-success fw-bold">
                                @totalProfit.ToString("N0") VNĐ
                            </h4>
                            <small class="text-muted">
                                Tỷ suất: @profitMargin.ToString("F1")%
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 metric-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="metric-icon bg-warning">
                                <i class="fas fa-shopping-cart text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="text-muted fw-medium mb-1">Tổng Đơn Hàng</p>
                            <h4 class="mb-0 text-warning fw-bold">
                                @totalOrders.ToString("N0")
                            </h4>
                            <small class="text-muted">
                                Đơn hoàn thành
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 metric-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="metric-icon bg-info">
                                <i class="fas fa-calculator text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="text-muted fw-medium mb-1">Đơn Hàng TB</p>
                            <h4 class="mb-0 text-info fw-bold">
                                @avgOrderValue.ToString("N0") VNĐ
                            </h4>
                            <small class="text-muted">
                                Giá trị trung bình
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Summary Stats -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2 text-primary"></i>Tổng Quan Doanh Thu
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-2">
                            <div class="border-end">
                                <h3 class="text-primary mb-1">@(Model?.RevenueByTime?.Count ?? 0)</h3>
                                <p class="text-muted mb-0 small">Kỳ báo cáo</p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="border-end">
                                <h3 class="text-success mb-1">@((totalRevenue / 1000000).ToString("F1"))M</h3>
                                <p class="text-muted mb-0 small">Doanh thu (triệu)</p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="border-end">
                                <h3 class="text-info mb-1">@((totalProfit / 1000000).ToString("F1"))M</h3>
                                <p class="text-muted mb-0 small">Lợi nhuận (triệu)</p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="border-end">
                                <h3 class="text-warning mb-1">@totalOrders</h3>
                                <p class="text-muted mb-0 small">Tổng đơn hàng</p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="border-end">
                                <h3 class="text-secondary mb-1">@profitMargin.ToString("F1")%</h3>
                                <p class="text-muted mb-0 small">Tỷ suất LN</p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <h3 class="text-dark mb-1">@((avgOrderValue / 1000).ToString("F0"))K</h3>
                            <p class="text-muted mb-0 small">Đơn TB (nghìn)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light border-0 d-flex align-items-center justify-content-between">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-table me-2 text-primary"></i>Chi Tiết Doanh Thu Theo Thời Gian
                        @if (Model?.RevenueByTime?.Count > 0)
                        {
                            <span class="badge bg-primary ms-2">@Model.RevenueByTime.Count kỳ</span>
                        }
                    </h5>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-success" onclick="exportToExcel()">
                            <i class="fas fa-file-excel me-1"></i>Xuất Excel
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
                            <i class="fas fa-print me-1"></i>In báo cáo
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model?.RevenueByTime?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0" id="revenue-table">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="border-0 ps-3" style="min-width: 120px;">Thời gian</th>
                                        <th class="border-0 text-end" style="min-width: 130px;">Doanh thu</th>
                                        <th class="border-0 text-end" style="min-width: 130px;">Lợi nhuận</th>
                                        <th class="border-0 text-center" style="min-width: 100px;">Đơn hàng</th>
                                        <th class="border-0 text-end" style="min-width: 120px;">Đơn TB</th>
                                        <th class="border-0 text-center" style="min-width: 110px;">Tỷ suất LN</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in pagedData)
                                    {
                                        var itemProfitMargin = item.Revenue > 0 ? (item.Profit / item.Revenue) * 100 : 0;
                                        var itemAvgOrder = item.OrderCount > 0 ? item.Revenue / item.OrderCount : 0;
                                        
                                        <tr class="hover-row">
                                            <td class="ps-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="time-icon bg-light rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                        <i class="fas fa-calendar-day text-primary" style="font-size: 12px;"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-medium">@(item.FormattedTimeLabel ?? item.Label ?? "N/A")</div>
                                                        <small class="text-muted">@item.TimePeriod.ToString("dd/MM/yyyy")</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-bold text-success">@item.Revenue.ToString("N0")</span>
                                                <small class="d-block text-muted">VNĐ</small>
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-bold text-primary">@item.Profit.ToString("N0")</span>
                                                <small class="d-block text-muted">VNĐ</small>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info rounded-pill fs-6">@item.OrderCount</span>
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-medium">@itemAvgOrder.ToString("N0")</span>
                                                <small class="d-block text-muted">VNĐ</small>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @(itemProfitMargin >= 20 ? "bg-success" : itemProfitMargin >= 10 ? "bg-warning text-dark" : "bg-danger") rounded-pill">
                                                    @itemProfitMargin.ToString("F1")%
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                    
                                    <!-- Summary Row -->
                                    <tr class="table-light border-top border-2 fw-bold">
                                        <td class="ps-3">
                                            <div class="d-flex align-items-center">
                                                <div class="time-icon bg-primary rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-calculator text-white" style="font-size: 12px;"></i>
                                                </div>
                                                <span class="text-primary fw-bold">TỔNG CỘNG</span>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-bold text-success fs-5">@totalRevenue.ToString("N0")</span>
                                            <small class="d-block text-muted">VNĐ</small>
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-bold text-primary fs-5">@totalProfit.ToString("N0")</span>
                                            <small class="d-block text-muted">VNĐ</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-dark rounded-pill fs-6">@totalOrders</span>
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-bold">@avgOrderValue.ToString("N0")</span>
                                            <small class="d-block text-muted">VNĐ</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-primary rounded-pill fs-6">
                                                @profitMargin.ToString("F1")%
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (totalPages > 1)
                        {
                            <div class="card-footer bg-light">
                                <nav aria-label="Revenue pagination">
                                    <ul class="pagination justify-content-center mb-0">
                                        @if (currentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@(currentPage - 1)">
                                                    <i class="fas fa-chevron-left me-1"></i>Trước
                                                </a>
                                            </li>
                                        }
                                        
                                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link" href="?page=@i">@i</a>
                                            </li>
                                        }
                                        
                                        @if (currentPage < totalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@(currentPage + 1)">
                                                    Sau<i class="fas fa-chevron-right ms-1"></i>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                                <div class="text-center mt-2">
                                    <small class="text-muted">
                                        Trang @currentPage/@totalPages - Hiển thị @pagedData.Count/@(Model.RevenueByTime.Count) bản ghi
                                    </small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center p-5">
                            <div class="mb-3">
                                <i class="fas fa-chart-line fa-4x text-muted opacity-25"></i>
                            </div>
                            <h5 class="text-muted">Không có dữ liệu doanh thu</h5>
                            <p class="text-muted mb-3">
                                Không tìm thấy dữ liệu doanh thu trong khoảng thời gian đã chọn.
                                <br>Vui lòng điều chỉnh bộ lọc hoặc kiểm tra lại dữ liệu.
                            </p>
                            <a href="/Admin/ThongKe/Revenue" class="btn btn-outline-primary">
                                <i class="fas fa-refresh me-2"></i>Làm mới
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

