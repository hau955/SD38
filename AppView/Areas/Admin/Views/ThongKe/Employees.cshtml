@using AppView.Areas.Admin.ViewModels.ThongKeViewModel
@model EmployeeReportViewModel
@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.0/chart.min.js"></script>
    <style>
        :root {
            --employee-primary: #6366f1;
            --employee-secondary: #8b5cf6;
            --employee-gradient: linear-gradient(135deg, var(--employee-primary) 0%, var(--employee-secondary) 100%);
        }

        .employee-card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            border: none;
            overflow: hidden;
        }

        .employee-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

        .employee-card-header {
            background: var(--employee-gradient);
            color: white;
            padding: 1.5rem;
            position: relative;
        }

        .employee-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            border: 4px solid white;
            object-fit: cover;
            margin-bottom: 1rem;
        }

        .employee-rating {
            color: #fbbf24;
            font-size: 1.2rem;
        }

        .employee-stat {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .employee-stat-icon {
            width: 30px;
            height: 30px;
            border-radius: 8px;
            background: rgba(99, 102, 241, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.75rem;
            color: var(--employee-primary);
        }

        .performance-metric {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .metric-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--employee-primary);
        }

        .metric-label {
            color: #64748b;
            font-size: 0.9rem;
        }

        .table-employees {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

            .table-employees thead th {
                background: var(--employee-gradient);
                color: white;
                border: none;
            }

            .table-employees tbody tr:hover {
                background-color: rgba(99, 102, 241, 0.05);
            }

        .badge-employee {
            background: rgba(99, 102, 241, 0.1);
            color: var(--employee-primary);
            font-weight: 500;
            padding: 0.4rem 0.75rem;
            border-radius: 50px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Page Title -->
        <div class="page-title-box" style="background: var(--employee-gradient);">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h4>@ViewData["Title"]</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Admin"><i class="fas fa-home me-1"></i>Trang chủ</a></li>
                            <li class="breadcrumb-item active">Thống kê nhân viên</li>
                        </ol>
                    </nav>
                </div>
                <div class="d-flex align-items-center">
                    <i class="fas fa-user-tie fa-2x opacity-50"></i>
                </div>
            </div>
        </div>

        <!-- Summary Metrics -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="performance-metric">
                    <div class="metric-value">@Model.Summary.TotalEmployees</div>
                    <div class="metric-label">Tổng số nhân viên</div>
                    <div class="progress mt-2" style="height: 8px;">
                        <div class="progress-bar" style="width: 100%; background: var(--employee-primary);"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="performance-metric">
                    <div class="metric-value">@Model.Summary.ActiveEmployees</div>
                    <div class="metric-label">Nhân viên đang làm việc</div>
                    <div class="progress-bar" style="width: @(Model.Summary.ActiveEmployees * 100 / Math.Max(1, Model.Summary.TotalEmployees))%; background: var(--employee-primary);"></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="performance-metric">
                    <div class="metric-value">@Model.Summary.TurnoverRate.ToString("F1")%</div>
                    <div class="metric-label">Tỷ lệ nghỉ việc</div>
                    <div class="progress mt-2" style="height: 8px;">
                        <div class="progress-bar" style="width: @Model.Summary.TurnoverRate%; background: var(--employee-primary);"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row g-4">
            <!-- Top Performers -->
            <div class="col-xl-8">
                <div class="card employee-card">
                    <div class="card-body">
                        <h5 class="card-title mb-4"><i class="fas fa-trophy me-2"></i>Top nhân viên hiệu suất cao</h5>
                        
                        <div class="table-responsive">
                            <table class="table table-employees">
                                <thead>
                                    <tr>
                                        <th>Nhân viên</th>
                                        <th>Doanh thu</th>
                                        <th>Đơn hàng</th>
                                        <th>Đánh giá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model.TopPerformers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <img src="https://ui-avatars.com/api/?name=@employee.EmployeeName&background=6366f1&color=fff" 
                                                             class="employee-avatar" alt="@employee.EmployeeName">
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@employee.EmployeeName</h6>
                                                        <small class="text-muted">@employee.HireDate.ToString("dd/MM/yyyy")</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@employee.RevenueGenerated.ToString("N0") VNĐ</td>
                                            <td>@employee.OrdersProcessed</td>
                                            <td>
                                                <div class="employee-rating">
                                                    @for (int i = 0; i < 5; i++)
                                                    {
                                                        <i class="fas @(i < employee.PerformanceRating ? "fa-star" : "fa-star-half-alt")"></i>
                                                    }
                                                    <span class="ms-1">@employee.PerformanceRating.ToString("F1")</span>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Employee Stats -->
            <div class="col-xl-4">
                <div class="card employee-card">
                    <div class="employee-card-header text-center">
                        <h5 class="mb-3">Thống kê nhân viên</h5>
                        <div class="d-flex justify-content-around text-white">
                            <div>
                                <h4 class="mb-0">@Model.Summary.TotalEmployees</h4>
                                <small>Tổng số</small>
                            </div>
                            <div>
                                <h4 class="mb-0">@Model.Summary.ActiveEmployees</h4>
                                <small>Đang làm việc</small>
                            </div>
                            <div>
                                <h4 class="mb-0">@Model.Summary.OnLeaveEmployees</h4>
                                <small>Nghỉ phép</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h6 class="mb-3"><i class="fas fa-chart-pie me-2"></i>Phân bổ nhân viên</h6>
                        
                        <div class="mb-4">
                            <h6>Theo phòng ban</h6>
                            @foreach (var dept in Model.Summary.EmployeesByDepartment)
                            {
                                <div class="employee-stat">
                                    <div class="employee-stat-icon">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between">
                                            <span>@dept.Key</span>
                                            <span class="text-muted">@dept.Value</span>
                                        </div>
                                        <div class="progress mt-1" style="height: 5px;">
                                            <div class="progress-bar" style="width: @((dept.Value * 100 / Model.Summary.TotalEmployees))%; background: var(--employee-primary);"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div>
                            <h6>Theo vị trí</h6>
                            @foreach (var pos in Model.Summary.EmployeesByPosition)
                            {
                                <div class="employee-stat">
                                    <div class="employee-stat-icon">
                                        <i class="fas fa-briefcase"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between">
                                            <span>@pos.Key</span>
                                            <span class="text-muted">@pos.Value</span>
                                        </div>
                                        <div class="progress mt-1" style="height: 5px;">
                                            <div class="progress-bar" style="width: @((pos.Value * 100 / Model.Summary.TotalEmployees))%; background: var(--employee-primary);"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="row g-4 mt-4">
            <!-- Employee Activity Chart -->
            <div class="col-xl-6">
                <div class="card employee-card">
                    <div class="card-body">
                        <h5 class="card-title mb-4"><i class="fas fa-calendar-alt me-2"></i>Hoạt động nhân viên</h5>
                        <div style="height: 300px;">
                            <canvas id="employeeActivityChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Performance Distribution Chart -->
            <div class="col-xl-6">
                <div class="card employee-card">
                    <div class="card-body">
                        <h5 class="card-title mb-4"><i class="fas fa-chart-bar me-2"></i>Phân bổ hiệu suất</h5>
                        <div style="height: 300px;">
                            <canvas id="performanceDistributionChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Employee Activity Chart
        const empActCtx = document.getElementById('employeeActivityChart').getContext('2d');
        const empActChart = new Chart(empActCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.EmployeeActivities.Select(e => e.Date.ToString("dd/MM")))),
                datasets: [
                    {
                        label: 'Nhân viên làm việc',
                        data: @Html.Raw(Json.Serialize(Model.EmployeeActivities.Select(e => e.ActiveEmployees))),
                        borderColor: '#6366f1',
                        backgroundColor: 'rgba(99, 102, 241, 0.1)',
                        tension: 0.3,
                        fill: true
                    },
                    {
                        label: 'Nhân viên nghỉ phép',
                        data: @Html.Raw(Json.Serialize(Model.EmployeeActivities.Select(e => e.OnLeaveEmployees))),
                        borderColor: '#f59e0b',
                        backgroundColor: 'rgba(245, 158, 11, 0.1)',
                        tension: 0.3,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top'
                    }
                }
            }
        });

        // Performance Distribution Chart
        const perfDistCtx = document.getElementById('performanceDistributionChart').getContext('2d');
        const perfDistChart = new Chart(perfDistCtx, {
            type: 'bar',
            data: {
                labels: ['1 sao', '2 sao', '3 sao', '4 sao', '5 sao'],
                datasets: [{
                    label: 'Số nhân viên',
                    data: [2, 5, 10, 15, 8], // Dữ liệu mẫu
                    backgroundColor: '#6366f1',
                    borderRadius: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
</body>
</html>