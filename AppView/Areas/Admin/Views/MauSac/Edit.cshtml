@model AppData.Models.MauSac

@{
    ViewData["Title"] = "Chỉnh sửa Màu Sắc";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IDMauSac" />

        <div class="form-group mb-3">
            <label asp-for="TenMau" class="form-label">Tên Màu</label>
            <input asp-for="TenMau" class="form-control" />
            <span asp-validation-for="TenMau" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="TrangThai" class="form-check-input" />
            <label asp-for="TrangThai" class="form-check-label">Hoạt động</label>
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
