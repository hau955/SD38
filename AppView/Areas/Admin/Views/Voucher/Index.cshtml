@model IEnumerable<AppView.Areas.Admin.ViewModels.VoucherVM>

<h2>Danh sách Voucher</h2>
<a asp-area="Admin" asp-controller="Voucher" asp-action="Create" class="btn btn-success">+ Thêm Voucher</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Mã Code</th>
            <th>Mô tả</th>
            <th>Phần trăm</th>
            <th>Số tiền giảm</th>
            <th>Điều kiện tối thiểu</th>
            <th>Số lượng</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CodeVoucher</td>
                <td>@item.MoTa</td>
                <td>@item.PhanTram</td>
                <td>@item.SoTienGiam</td>
                <td>@item.DieuKienToiThieu</td>
                <td>@item.SoLuong</td>
                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-area="Admin" asp-controller="Voucher" asp-action="Edit" asp-route-id="@item.IdVoucher" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-area="Admin" asp-controller="Voucher" asp-action="Details" asp-route-id="@item.IdVoucher" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-area="Admin" asp-controller="Voucher" asp-action="Delete" asp-route-id="@item.IdVoucher" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bạn có chắc muốn xóa?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
