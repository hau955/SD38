@model IEnumerable<AppView.Areas.Admin.ViewModels.VoucherVM>

@{
    ViewData["Title"] = "Danh sách Voucher";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
        <h4 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>Danh sách Voucher</h4>
        <a asp-area="Admin" asp-controller="Voucher" asp-action="Create" class="btn btn-light text-primary fw-bold">
            <i class="fas fa-plus-circle"></i> Thêm Voucher
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã Code</th>
                        <th>Mô tả</th>
                        <th>Phần trăm (%)</th>
                        <th>Số tiền giảm (VNĐ)</th>
                        <th>Điều kiện tối thiểu</th>
                        <th>Số lượng</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted">
                                <i class="fas fa-info-circle"></i> Không có voucher nào.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@item.CodeVoucher</span></td>
                                <td>@item.MoTa</td>
                                <td>@item.PhanTram %</td>
                                <td>@(item.SoTienGiam?.ToString("N0") ?? "-")</td>
                                <td>@(item.DieuKienToiThieu?.ToString("N0") ?? "-")</td>
                                <td>@item.SoLuong</td>
                                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a asp-area="Admin" asp-controller="Voucher" asp-action="Edit" asp-route-id="@item.IdVoucher"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                  @*   <a asp-area="Admin" asp-controller="Voucher" asp-action="Details" asp-route-id="@item.IdVoucher"
                                       class="btn btn-sm btn-info me-1 text-white">
                                        <i class="fas fa-eye"></i>
                                    </a> *@
                                   
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
