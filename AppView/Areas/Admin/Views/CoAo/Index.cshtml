@model List<AppData.Models.CoAo>
@{
    ViewData["Title"] = "Quản lý Cổ Áo";
}
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <a class="btn btn-success mb-3" asp-action="Create">Thêm mới</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên cổ áo</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenCoAo</td>
                    <td>
                        <span class="badge @(item.TrangThai ? "bg-success" : "bg-secondary")">
                            @(item.TrangThai ? "Hoạt động" : "Không hoạt động")
                        </span>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.IDCoAo">Sửa</a>
                        <a class="btn btn-sm btn-warning" asp-action="ToggleStatus" asp-route-id="@item.IDCoAo">Chuyển trạng thái</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IDCoAo">Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
