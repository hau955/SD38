@model WebModels.Models.CoAo

@{
    ViewData["Title"] = "Chỉnh sửa Cổ Áo";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="fas fa-edit"></i> @ViewData["Title"]
    </h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="IDCoAo" />

        <div class="form-group mb-3">
            <label asp-for="TenCoAo" class="form-label">Tên cổ áo</label>
            <input asp-for="TenCoAo" class="form-control" placeholder="Nhập tên cổ áo..." />
            <span asp-validation-for="TenCoAo" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="TrangThai" class="form-check-input" />
            <label asp-for="TrangThai" class="form-check-label">Hoạt động</label>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Cập nhật
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
