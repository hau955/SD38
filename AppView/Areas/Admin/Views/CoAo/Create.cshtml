@model WebModels.Models.CoAo
@{
    ViewData["Title"] = "Thêm Cổ Áo";
}
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-area="Admin" asp-controller="CoAo" asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="TenCoAo" class="form-label">Tên cổ áo</label>
            <input asp-for="TenCoAo" class="form-control" placeholder="Nhập tên cổ áo" />
            <span asp-validation-for="TenCoAo" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="TrangThai" class="form-check-input" />
            <label asp-for="TrangThai" class="form-check-label">Hoạt động</label>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
