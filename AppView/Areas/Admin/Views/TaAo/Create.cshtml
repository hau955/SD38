@model AppData.Models.TaAo

@{
    ViewData["Title"] = "Thêm Tà Áo";
    Layout = "_AdminLayout";
}

<!-- Custom Style -->
<style>
    .card {
        font-family: 'Segoe UI', sans-serif;
        border-radius: 1rem;
    }

    .card-header {
        background-color: #4682B4 !important; /* Xanh dương nhẹ */
        border-radius: 1rem 1rem 0 0;
    }

    .card-body {
        background: #fffaf0;
        border-radius: 0 0 1rem 1rem;
        padding: 2rem;
    }

    label, .form-check-label {
        font-weight: 500;
    }

    .form-control {
        font-size: 1rem;
    }

    .btn-success {
        background-color: #d4af37;
        border: none;
        font-weight: 500;
        color: white;
    }

        .btn-success:hover {
            background-color: #b8941f;
        }

    .btn-secondary {
        background-color: #8B0000;
        border: none;
        color: white;
        font-weight: 500;
    }

        .btn-secondary:hover {
            background-color: #a52a2a;
        }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-white">
            <h4 class="mb-0">
                <i class="fas fa-plus-circle me-2"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="TenTaAo" class="form-control" placeholder="Tên tà áo" />
                    <label asp-for="TenTaAo">Tên Tà Áo</label>
                    <span asp-validation-for="TenTaAo" class="text-danger small"></span>
                </div>

                <div class="form-check form-switch mb-4">
                    <input asp-for="TrangThai" class="form-check-input" />
                    <label asp-for="TrangThai" class="form-check-label">Hoạt động</label>
                </div>

                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-success me-2 px-4">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
