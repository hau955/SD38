@model WebModels.Models.TaAo

@{
    ViewData["Title"] = "Chỉnh sửa Tà Áo";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">
        <i class="fas fa-edit"></i> @ViewData["Title"]
    </h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="IDTaAo" />

        <div class="form-group mb-3">
            <label asp-for="TenTaAo" class="form-label">Tên tà áo</label>
            <input asp-for="TenTaAo" class="form-control" placeholder="Nhập tên tà áo..." />
            <span asp-validation-for="TenTaAo" class="text-danger"></span>
        </div>

        <div class="form-check mb-4">
            <input asp-for="TrangThai" class="form-check-input" />
            <label asp-for="TrangThai" class="form-check-label">Hoạt động</label>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Cập nhật
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
