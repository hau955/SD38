@model PagedList.IPagedList<AppView.Areas.Admin.ViewModels.DanhMucViewModel>

@{
    ViewData["Title"] = "Quản lý Danh Mục";
}

<!-- Custom Style -->
<style>
    .table-wrapper {
        background: #fffaf0;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        color: #8B0000;
        font-weight: 600;
        border-bottom: 2px solid #d4af37;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .btn-success {
        background-color: #d4af37;
        border: none;
        font-weight: 500;
    }

    .btn-success:hover {
        background-color: #b8941f;
    }

    .btn-danger {
        background-color: #8B0000;
        border: none;
    }

    .btn-danger:hover {
        background-color: #a52a2a;
    }

    .btn-warning {
        background-color: #ff9800;
        border: none;
    }

    .btn-primary {
        background-color: #4682B4;
        border: none;
    }

    .alert {
        font-size: 0.95rem;
    }

    .filter-section {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #dee2e6;
    }

    .pagination {
        justify-content: center;
        margin-top: 1.5rem;
    }

    .pagination .page-link {
        color: #8B0000;
        border-color: #d4af37;
    }

    .pagination .page-item.active .page-link {
        background-color: #d4af37;
        border-color: #d4af37;
    }

    .pagination .page-link:hover {
        color: #8B0000;
        background-color: #f8f9fa;
        border-color: #d4af37;
    }
</style>

<div class="container mt-4">
    <div class="table-wrapper">
        <h2><i class="fas fa-list-ul me-2"></i> @ViewData["Title"]</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Filter Section -->
        <div class="filter-section">
            <form asp-area="Admin" asp-controller="DanhMuc" asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label"><i class="fas fa-search"></i> Tìm kiếm</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                           value="@ViewBag.CurrentFilter" placeholder="Nhập tên danh mục...">
                </div>
                <div class="col-md-2">
                    <label for="pageSize" class="form-label">Hiển thị</label>
                    <select class="form-select" id="pageSize" name="pageSize">
                       <option value="5" selected="@(ViewBag.PageSize == 5)">5</option>
                        <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
                        <option value="20" selected="@(ViewBag.PageSize == 20)">20</option>
                        <option value="50" selected="@(ViewBag.PageSize == 50)">50</option>

                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter"></i> Lọc
                        </button>
                        <a href="@Url.Action("Index", "DanhMuc", new { area = "Admin" })" class="btn btn-outline-secondary">
                            <i class="fas fa-undo"></i> Đặt lại
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Action Button -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a class="btn btn-success" asp-area="Admin" asp-controller="DanhMuc" asp-action="Create">
                <i class="fas fa-plus"></i> Thêm mới
            </a>
            <small class="text-muted">
                Hiển thị @((Model.PageNumber - 1) * Model.PageSize + 1) - @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItemCount)) 
                trong tổng số @Model.TotalItemCount danh mục
            </small>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%;">
                                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm" 
                                   asp-route-currentFilter="@ViewBag.CurrentFilter"
                                   asp-route-pageSize="@ViewBag.PageSize"
                                   class="text-decoration-none text-dark">
                                    Tên danh mục
                                    @if (ViewBag.SortOrder == "name")
                                    {
                                        <i class="fas fa-sort-up"></i>
                                    }
                                    else if (ViewBag.SortOrder == "name_desc")
                                    {
                                        <i class="fas fa-sort-down"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort"></i>
                                    }
                                </a>
                            </th>
                            <th style="width: 45%;">Mô tả</th>
                            <th style="width: 30%;" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-medium">@item.TenDanhMuc</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.MoTa))
                                    {
                                        <span title="@item.MoTa">
                                            @(item.MoTa.Length > 100 ? item.MoTa.Substring(0, 100) + "..." : item.MoTa)
                                        </span>
                                    }
                                    else
                                    {
                                        <em class="text-muted">Chưa có mô tả</em>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2 justify-content-center">
                                        <a asp-action="Edit" asp-route-id="@item.DanhMucId" 
                                           class="btn btn-sm btn-primary" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <form asp-area="Admin" asp-controller="DanhMuc" asp-action="Delete" 
                                              asp-route-id="@item.DanhMucId" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                    onclick="return confirm('Bạn có chắc chắn muốn xoá danh mục này không?');"
                                                    title="Xóa">
                                                <i class="fas fa-trash-alt"></i> Xoá
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.PageCount > 1)
            {
                <nav aria-label="Phân trang danh mục">
                    <ul class="pagination">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" 
                                   asp-action="Index" 
                                   asp-route-page="@(Model.PageNumber - 1)"
                                   asp-route-currentFilter="@ViewBag.CurrentFilter"
                                   asp-route-sortOrder="@ViewBag.SortOrder"
                                   asp-route-pageSize="@ViewBag.PageSize">
                                    <i class="fas fa-chevron-left"></i> Trước
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.PageCount, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" 
                                   asp-action="Index" 
                                   asp-route-page="@i"
                                   asp-route-currentFilter="@ViewBag.CurrentFilter"
                                   asp-route-sortOrder="@ViewBag.SortOrder"
                                   asp-route-pageSize="@ViewBag.PageSize">
                                    @i
                                </a>
                            </li>
                        }

                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" 
                                   asp-action="Index" 
                                   asp-route-page="@(Model.PageNumber + 1)"
                                   asp-route-currentFilter="@ViewBag.CurrentFilter"
                                   asp-route-sortOrder="@ViewBag.SortOrder"
                                   asp-route-pageSize="@ViewBag.PageSize">
                                    Sau <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> 
                @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter as string))
                {
                    <span>Không tìm thấy danh mục nào với từ khóa "<strong>@ViewBag.CurrentFilter</strong>".</span>
                }
                else
                {
                    <span>Chưa có danh mục nào được tạo.</span>
                }
            </div>
        }
    </div>
</div>