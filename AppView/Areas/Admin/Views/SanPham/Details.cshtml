@model AppView.Areas.Admin.ViewModels.SanPhamCTViewModel

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Tên sản phẩm</dt>
        <dd class="col-sm-9">@Model.TenSanPham</dd>

        <dt class="col-sm-3">Giới tính</dt>
        <dd class="col-sm-9">@((Model.GioiTinh == true) ? "Nam" : (Model.GioiTinh == false ? "Nữ" : "Unisex"))</dd>

        <dt class="col-sm-3">Trọng lượng</dt>
        <dd class="col-sm-9">@Model.TrongLuong gram</dd>

        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Model.MoTa</dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">@(Model.TrangThai ? "Đang bán" : "Ngừng bán")</dd>

        <dt class="col-sm-3">Hình ảnh</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="@Model.HinhAnh" alt="Ảnh sản phẩm" style="max-width: 200px;" />
            }
            else
            {
                <span class="text-muted">Chưa có ảnh</span>
            }
        </dd>

        <dt>Size</dt>
        <dd>@Model.SizeList?.FirstOrDefault(s => s.Value == Model.IdSize.ToString())?.Text</dd>

        <dt>Màu sắc</dt>
        <dd>@Model.MauSacList?.FirstOrDefault(s => s.Value == Model.IdMauSac.ToString())?.Text</dd>

        <dt>Cổ áo</dt>
        <dd>@Model.CoAoList?.FirstOrDefault(s => s.Value == Model.IdCoAo.ToString())?.Text</dd>

        <dt>Tà áo</dt>
        <dd>@Model.TaAoList?.FirstOrDefault(s => s.Value == Model.IdTaAo.ToString())?.Text</dd>

    </dl>

    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
</div>
