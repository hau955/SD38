@model WebModels.Models.SanPham

@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post">
        @* Hidden field for ID *@
        <input type="hidden" asp-for="IDSanPham" />

        <div class="form-group">
            <label asp-for="TenSanPham" class="control-label">Tên sản phẩm</label>
            <input asp-for="TenSanPham" class="form-control" placeholder="Nhập tên sản phẩm..." />
            <span asp-validation-for="TenSanPham" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GioiTinh" class="control-label">Giới tính</label>
            <select asp-for="GioiTinh" class="form-control">
                <option value="">Unisex</option>
                <option value="true" selected="@((Model.GioiTinh ?? false) == true)">Nam</option>
                <option value="false" selected="@((Model.GioiTinh ?? true) == false)">Nữ</option>
            </select>
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TrongLuong" class="control-label">Trọng lượng (gram)</label>
            <input asp-for="TrongLuong" class="form-control" placeholder="VD: 500" />
            <span asp-validation-for="TrongLuong" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MoTa" class="control-label">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả..."></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="TrangThai" class="form-check-input" />
            <label asp-for="TrangThai" class="form-check-label">Hoạt động</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Lưu
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Hủy
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
