@model List<AppView.Areas.Admin.ViewModels.SanPhamViewModels.SanPhamView>

<h2>Danh sách sản phẩm</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Mô tả</th>
            <th>Trọng lượng</th>
            <th>Giới tính</th>
            <th>Trạng thái</th>
            <th>Danh mục</th>
            <th>Hình ảnh</th>
            <th>Ngày tạo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenSanPham</td>
                <td>@item.MoTa</td>
                <td>@item.TrongLuong</td>
                <td>@(item.GioiTinh ? "Nam" : "Nữ")</td>
                <td>@(item.TrangThai ? "Còn hàng" : "Hết hàng")</td>
                <td>@item.TenDanhMuc</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                    {
                        <img src="@item.HinhAnh" width="100" height="100" />


                    }
                </td>
                <td>@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-area="Admin"
                       asp-controller="SanPhamCT"
                       asp-action="ThemChiTiet"
                       asp-route-idSanPham="@item.IDSanPham"
                       class="btn btn-primary">Thêm chi tiết</a>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.IDSanPham" class="btn btn-warning btn-sm">Sửa</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IDSanPham" class="btn btn-warning btn-sm">Xem</a>
                </td>

            </tr>
             <tr>
               
                

    </tr>
        }
    </tbody>
</table>
