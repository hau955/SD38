@model List<AppView.Areas.Admin.ViewModels.SanPhamViewModels.SanPhamView>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">
            <i class="fas fa-list"></i> @ViewData["Title"]
        </h2>
        <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="SanPham" asp-action="Create">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Mô tả</th>
                    <th>Trọng lượng</th>
                    <th>Giới tính</th>
                    <th>Trạng thái</th>
                    <th>Danh mục</th>
                    <th>Hình ảnh</th>
                    <th>Ngày tạo</th>
                    <th colspan="3">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold text-start">@item.TenSanPham</td>
                        <td class="text-start">@item.MoTa</td>
                        <td>@item.TrongLuong</td>
                        <td>
                            <span class="badge bg-info text-dark">
                                @(item.GioiTinh ? "Nam" : "Nữ")
                            </span>
                        </td>
                        <td>
                            <span class="badge @(item.TrangThai ? "bg-success" : "bg-secondary")">
                                @(item.TrangThai ? "Còn hàng" : "Hết hàng")
                            </span>
                        </td>
                        <td>@item.TenDanhMuc</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.HinhAnh))
                            {
                                <img src="@item.HinhAnh" class="rounded" width="80" height="80" style="object-fit:cover;" />
                            }
                            else
                            {
                                <span class="text-muted">Không có ảnh</span>
                            }
                        </td>
                        <td>@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <a asp-area="Admin"
                               asp-controller="SanPhamCT"
                               asp-action="ThemChiTiet"
                               asp-route-idSanPham="@item.IDSanPham"
                               class="btn btn-sm btn-primary">
                                <i class="fas fa-plus"></i> Chi tiết
                            </a>
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.IDSanPham" class="btn btn-sm btn-warning text-white">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.IDSanPham" class="btn btn-sm btn-info text-white">
                                <i class="fas fa-eye"></i> Xem
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Optional: Tự động ẩn alert sau 5s
        setTimeout(() => {
            const alert = document.querySelector('.alert');
            if (alert) alert.remove();
        }, 5000);
    </script>
}
