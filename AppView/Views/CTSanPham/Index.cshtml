@model List<AppView.ViewModels.SanPham.SanPhamView>
@using System.Text.Json
@{
   
    var apiBaseUrl = "https://localhost:7221"; // hoặc đọc từ cấu hình
}
<style>
    .product-page {
        flex: 1;
    }

        .product-page h2 {
            margin-bottom: 20px;
        }

    .product-grid {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        margin: 20px;
    }

    .product-card {
        width: 280px;
        position: relative;
    }

    .product-img {
        position: relative;
        overflow: hidden;
    }

        .product-img img {
            width: 100%;
            height: auto;
            display: block;
        }

    .product-info {
        margin-top: 10px;
    }

        .product-info p {
            margin: 0;
            font-size: 14px;
        }

        .product-info del {
            color: #999;
            font-size: 13px;
        }

    .badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background: #cc4b37;
        color: white;
        font-size: 12px;
        padding: 3px 8px;
        border-radius: 3px;
    }

    .discount {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #fff;
        color: red;
        font-size: 13px;
        padding: 2px 5px;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: 0.3s;
    }

        .overlay button {
            padding: 8px 20px;
            border: 1px solid white;
            background: transparent;
            color: white;
            cursor: pointer;
        }

    .product-img:hover .overlay {
        opacity: 1;
    }

</style>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
