@using Microsoft.AspNetCore.Identity
@using WebModels.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var token = Context.Session.GetString("Token");
    var email = Context.Session.GetString("Email") ?? "Khách";
    var roles = Context.Session.GetString("Roles") ?? "";
    var isAdmin = roles.Contains("Admin");
    var isLoggedIn = !string.IsNullOrEmpty(token);
}

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Áo Dài Việt - Quản Lý Bán Áo Dài Truyền Thống</title>

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg custom-navbar fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-flower1"></i> Áo Dài Việt
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Trang Chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/san-pham">Sản Phẩm</a></li>

                    @if (isLoggedIn)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @email
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                @if (isAdmin)
                                {
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">Trang Admin</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Profile">Tài khoản của tôi</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button class="dropdown-item" type="submit">Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="#" onclick="showRegisterModal()">Đăng ký</a></li>
                        <li class="nav-item"><a class="nav-link" href="#" onclick="showLoginModal()">Đăng nhập</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="main-content" style="padding-top: 100px;">
        @RenderBody()
    </main>

    <footer id="contact" class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="footer-title">Áo Dài Việt</h5>
                    <p>Bảo tồn và phát huy vẻ đẹp truyền thống của áo dài Việt Nam qua từng sản phẩm.</p>
                    <div class="social-links">
                        <a href="#" class="text-warning me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-warning me-3"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-warning me-3"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="footer-title">Liên Hệ</h5>
                    <p><i class="bi bi-geo-alt me-2"></i>123 Đường Nguyễn Huệ, Q.1, TP.HCM</p>
                    <p><i class="bi bi-telephone me-2"></i>0123 456 789</p>
                    <p><i class="bi bi-envelope me-2"></i>info@aodaiviet.com</p>
                </div>
                <div class="col-lg-4 col-md-12 mb-4">
                    <h5 class="footer-title">Đăng Ký Nhận Tin</h5>
                    <p>Nhận thông tin về các bộ sưu tập mới và ưu đãi đặc biệt</p>
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Email của bạn">
                        <button class="btn btn-warning" onclick="showRegisterModal()">
                            <i class="bi bi-send"></i>
                        </button>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2024 Áo Dài Việt. Tất cả quyền được bảo lưu.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Thiết kế với <i class="bi bi-heart-fill text-warning"></i> tại Việt Nam</p>
                </div>
            </div>
        </div>
    </footer>

    @await Html.PartialAsync("_LoginPartial")
    @await Html.PartialAsync("_RegisterPartial")
    @await Html.PartialAsync("_SuccessPartial")
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
