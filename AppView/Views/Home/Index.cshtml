<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>
<script>
    // Filter products by category
    function filterProducts(category) {
        const products = document.querySelectorAll('.product-item');
        const filterBtns = document.querySelectorAll('.filter-btn');

        // Update active filter button
        filterBtns.forEach(btn => btn.classList.remove('active'));
        event.target.classList.add('active');

        // Show/hide products
        products.forEach(product => {
            if (category === 'all' || product.dataset.category === category) {
                product.style.display = 'block';
                product.style.animation = 'fadeIn 0.5s ease-in';
            } else {
                product.style.display = 'none';
            }
        });
    }

    // View product details
    function viewProduct(productId) {
        alert(`Xem chi tiết sản phẩm ID: ${productId}`);
        // Here you would typically redirect to product detail page
        // window.location.href = `/san-pham/${productId}`;
    }

    // Add to cart
         function addToCart(productId) {
        if (isLoggedIn) {
            // ✅ Nếu đã đăng nhập, thực hiện logic thêm vào giỏ hàng
            alert(`Đã thêm sản phẩm ID: ${productId} vào giỏ hàng!`);
            // TODO: gọi API hoặc xử lý logic thực tế
        } else {
            const loginModal = document.getElementById('loginModal');
            if (loginModal) {
                const modal = new bootstrap.Modal(loginModal);
                modal.show();
            } else {
                alert("Không tìm thấy modal đăng nhập.");
            }
        }
    }


    // Add fade in animation
    const style = document.createElement('style');
    style.textContent = `
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    `;
    document.head.appendChild(style);
</script>
<script>
    const isLoggedIn = @((Context.Session.GetString("Token") != null).ToString().ToLower());
</script>
